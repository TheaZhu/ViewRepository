<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <integer name="ballDuration">1000</integer>
    <color name="ballShadowColor">#60000000</color>

    <style name="Base.BallLoadingView" parent="android:Widget">
        <item name="ballDuration">@integer/ballDuration</item>
        <item name="ballImage">@mipmap/ic_ball</item>
        <item name="ballShadowColor">@color/ballShadowColor</item>
    </style>


</resources>
